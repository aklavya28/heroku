
<div class="container mt-4">
    <h1>New Post</h1>


    <% if @blog.errors.any?  %>


        <h2>Following errors are prevented the blog from being saved</h2>

        <ul>
            <% @blog.errors.full_messages.each do |msg| %>

            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>


    <%=  current_user.id %>
    <%=  current_user.username %>
    <%=  form_with scope: :blog, url: blogs_path, local: true do |f| %>
        <div>
            <label><%= f.label :title %></label>
            <div><%= f.text_field :title, class: "form-control" %></div>
        </div>
        <div class="mt-2">
            <label><%= f.label :description %></label>
            <div><%= f.text_area :description, class: "form-control" %></div>
            <% f.text_field :user_id, value: current_user.id,  class: "form-control" %>
        </div>
        <div class="mt-3">
            <%= f.submit "sdf sdfsdf", class: "btn btn-dark" %>
        </div>

    <% end %>
</div>
