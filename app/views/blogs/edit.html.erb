
<div class="container mt-4">

    <h1>New Post</h1>
    <% if @blog.errors.any?  %>
       <h2>Following errors are prevented the blog from being saved</h2>
        <ul>
            <% @blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <%=  form_with(model: @blog, local: true) do |f| %>
        <div>
            <label><%= f.label :title %></label>
            <div><%= f.text_field :title, class: "form-control" %></div>
        </div>
        <div>
            <label><%= f.label :description %></label>
            <div><%= f.text_area :description , class: "form-control"  %></div>
        </div>
        <div class="mt-2">
            <%= f.submit class:"btn btn-info" %>
        </div>
    <% end %>
    <%= link_to "Back to Blog", blogs_path %>
</div>

