<div class="container">
<%= link_to "add", new_category_path %>
        <table class="table">
            <tr>
               <th>#</th>
               <th>Name</th>
               <th>Action</th>
            </tr>
            <% @category.each do |cat, index |%>
            <tr>
               <td><%=  index %></td>
               <td> <%= cat.name%> <span class="badge bg-info"><%= cat.blogs.count%> </span></td>
               <td>
                  <%= link_to "show", category_path(cat), class:"btn btn-info btn-sm" %>
                  <%= link_to "Edit", edit_category_path(cat), class: "btn btn-success btn-sm" %>
               </td>

            </tr>
            <% end %>
        </table>
</div>
